// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String @id @default(uuid())
  name          String
  email         String @unique
  password_hash String

  @@map("users")
}

enum Type {
  INCOME
  OUTCOME
  PERSONAL
}

model Input {
  id        String  @id @default(uuid())
  label     String
  createdAt String
  type      Type
  value     Decimal

  @@map("inputs")
}
